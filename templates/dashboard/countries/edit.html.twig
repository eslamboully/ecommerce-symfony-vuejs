{% extends 'dashboard/layouts/base.html.twig' %}

{% block content %}
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0 text-dark">تعديل البلد</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-left">
                        <li class="breadcrumb-item"><a href="{{ path('dashboard.index') }}">الرئيسية</a></li>
                        <li class="breadcrumb-item"><a href="{{ path('dashboard.countries.index') }}">البلدان</a></li>
                        <li class="breadcrumb-item active">تعديل</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <form role="form" method="post" enctype="multipart/form-data">
                            {{ form_errors(form) }}
                            {{ form_row(form._token) }}
                            <div class="card-body">
                                <div class="form-group">
                                    {{ form_label(form.name) }}
                                    {{ form_widget(form.name) }}
                                    <div style="color: red" class="errors">{{ form_errors(form.name) }}</div>
                                </div>
                                <div class="form-group">
                                    {{ form_label(form.mob) }}
                                    {{ form_widget(form.mob) }}
                                    <div style="color: red" class="errors">{{ form_errors(form.mob) }}</div>
                                </div>
                                <div class="form-group">
                                    {{ form_label(form.code) }}
                                    {{ form_widget(form.code) }}
                                    <div style="color: red" class="errors">{{ form_errors(form.code) }}</div>
                                </div>
                                <div class="form-group">
                                    {{ form_label(form.logo) }}
                                    {{ form_widget(form.logo) }}
                                    <div style="color: red" class="errors">{{ form_errors(form.logo) }}</div>
                                </div>
                            </div>
                            <!-- /.card-body -->

                            <div class="card-footer">
                                <button type="submit" class="btn btn-primary">ارسال</button>
                            </div>
                        </form>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>
{% endblock %}